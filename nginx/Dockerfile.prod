# Production Nginx Dockerfile for Divemap
FROM nginx:alpine

# Install required packages
RUN apk add --no-cache \
    curl \
    netcat-openbsd \
    && rm -rf /var/cache/apk/*

# Copy production configuration
COPY prod.conf /etc/nginx/nginx.conf

# Copy startup script
COPY startup.sh /usr/local/bin/startup.sh
RUN chmod +x /usr/local/bin/startup.sh && \
    chown nginx:nginx /usr/local/bin/startup.sh

# Copy static loading page used during auto-start warmup
COPY loading.html /usr/share/nginx/html/loading.html

# Copy frontend build (content-hashed assets with precompression)
# This will be populated during CI/CD build process
COPY frontend-build/ /usr/share/nginx/html/

# Ensure proper ownership of frontend assets
RUN chown -R nginx:nginx /usr/share/nginx/html/

# Set proper permissions (nginx user already exists in base image)
RUN chown -R nginx:nginx /var/cache/nginx && \
    chown -R nginx:nginx /var/log/nginx && \
    chown -R nginx:nginx /etc/nginx/conf.d && \
    chown nginx:nginx /etc/nginx/nginx.conf && \
    chmod 644 /etc/nginx/nginx.conf && \
    touch /var/run/nginx.pid && \
    chown -R nginx:nginx /var/run/nginx.pid

# Create health check script
RUN echo '#!/bin/sh' > /usr/local/bin/healthcheck && \
    echo 'curl -f http://localhost/health || exit 1' >> /usr/local/bin/healthcheck && \
    chmod +x /usr/local/bin/healthcheck

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD /usr/local/bin/healthcheck

# Expose port (only HTTP needed)
EXPOSE 80

# Create a wrapper script that runs pre-warming as root, then starts nginx as nginx user
RUN echo '#!/bin/sh' > /usr/local/bin/startup-wrapper.sh && \
    echo 'echo "ðŸš€ Starting Nginx with pre-warming..."' >> /usr/local/bin/startup-wrapper.sh && \
    echo 'echo "ðŸ“¡ Pre-warming database at ${DB_HOST:-divemap-db.flycast}:${DB_PORT:-3306}..."' >> /usr/local/bin/startup-wrapper.sh && \
    echo 'echo "ðŸ“¡ Pre-warming backend at ${BACKEND_HOST:-divemap-backend.flycast}:${BACKEND_PORT:-80}..."' >> /usr/local/bin/startup-wrapper.sh && \
    echo 'timeout 1s nc -6 -w 1 "${DB_HOST:-divemap-db.flycast}" "${DB_PORT:-3306}" < /dev/null > /dev/null 2>&1 &' >> /usr/local/bin/startup-wrapper.sh && \
    echo 'echo "âœ… Database ping sent (non-blocking)"' >> /usr/local/bin/startup-wrapper.sh && \
    echo 'timeout 1s curl -s -f "http://${BACKEND_HOST:-divemap-backend.flycast}:${BACKEND_PORT:-80}/" > /dev/null 2>&1 &' >> /usr/local/bin/startup-wrapper.sh && \
    echo 'echo "âœ… Backend ping sent (non-blocking)"' >> /usr/local/bin/startup-wrapper.sh && \
    echo 'echo "ðŸŽ¯ Pre-warming complete! Starting Nginx..."' >> /usr/local/bin/startup-wrapper.sh && \
    echo 'exec nginx -g "daemon off;"' >> /usr/local/bin/startup-wrapper.sh && \
    chmod +x /usr/local/bin/startup-wrapper.sh

# Start nginx with pre-warming
CMD ["/usr/local/bin/startup-wrapper.sh"]
